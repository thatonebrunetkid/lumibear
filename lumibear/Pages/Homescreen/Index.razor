@page "/"
@using lumibear.Pages.Common

<PageTitle>LumiBear</PageTitle>

<body onscroll="DoOnScroll()">
    <script>
        function DoOnScroll() {
            if (window.scrollY === 0) {
                document.getElementById("upper").style.backgroundColor = "transparent";
                document.getElementById("lower").style.backgroundColor = "transparent";
                document.getElementById("upper").style.transition = "all 0.25s";
                document.getElementById("lower").style.transition = "all 0.25s";
                document.getElementById("header").style.position = "static";
            } else {
                document.getElementById("header").style.position = "fixed";
                document.getElementById("upper").style.backgroundColor = "black";
                document.getElementById("lower").style.backgroundColor = "black";
                document.getElementById("header").style.zIndex = 999;
                document.getElementById("upper").style.zIndex = 999;
                document.getElementById("lower").style.zIndex = 999;
                document.getElementById("upper").style.transition = "all 0.25s";
                document.getElementById("lower").style.transition = "all 0.25s";
            }
        }
    </script>
    <div style="background: url('Assets/MainPage/MainDivBg.jpg'); height: 130%!important; bottom: 0!important; background-position: center; background-repeat: no-repeat; background-size: cover">
        <NavBar></NavBar>
        <div style="padding: 0; min-height: 90vh">
            <img src="Assets/MainPage/mainLogo.gif" style="width: 50%; margin-left: 27%">
            <div style="">
                <button class="MainButton" type="submit" style="display: inline-block; margin: 0 auto; left: 44%; position: relative; margin: 10px; font-family: PoiretOne;">Kolekcja Świec</button>
                <button class="MainButton" type="submit" style="display: inline-block; margin: 0 auto; left: 44%; position: relative; font-family: PoiretOne;">Kolekcja Home</button>
            </div>
        </div>
    </div>

   <ScentedCarousel></ScentedCarousel>


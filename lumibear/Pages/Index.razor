@code{
    private int ImageIndex1 { get; set; }
    private int ImageIndex2 { get; set; }
    private int ImageIndex3 { get; set; }


    private void MoveSlideshowRight()
    {
        int MaximumImageIndex = 9;
        if(ImageIndex3 != MaximumImageIndex)
        {
            ImageIndex1 += 3;
            ImageIndex2 += 3;
            ImageIndex3 += 3;
        }else
        {
            ImageIndex1 = 1;
            ImageIndex2 = 2;
            ImageIndex3 = 3;
        }
    }

    private void MoveSlideshowLeft()
    {
        int MinimumImageIndex = 1;
        if (ImageIndex1 != MinimumImageIndex)
        {
            ImageIndex1 -= 3;
            ImageIndex2 -= 3;
            ImageIndex3 -= 3;
        }else
        {
            ImageIndex1 = 7;
            ImageIndex2 = 8;
            ImageIndex3 = 9;
        }
    }
}
